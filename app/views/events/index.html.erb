<div class="text-center">
    <h1>Events List </h1>
    <h5>Future Events</h5>
</div>
<div class="d-flex justify-content-center flex-wrap">
    <% @future.each do |event| %>
        <div class="card m-4" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= link_to "#{event.name}", event_path(event)  %></h5>
            <p class="card-text"><%= "#{event.description}" %></p>
            <small>by: <%= "#{event.creator.name}" %> </small>
        </div>
        </div>
    <% end %>
</div>

<div class="text-center">
    <h5>Past Events</h5>
</div>

<div class="d-flex justify-content-center flex-wrap">
    <% @past.each do |event| %>
        <div class="card m-4" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= link_to "#{event.name}", event_path(event)  %></h5>
            <p class="card-text"><%= "#{event.description}" %></p>
            <small>by: <%= "#{event.creator.name}" %> </small>
        </div>
        </div>
    <% end %>
</div>
