<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<% if @current_user %>
    <small><%= "Welcome #{@current_user.name}" %></small>
    <% @current_user.events.each do |event| %>
    <p><%=  " Event Title: #{event.name}, name: #{event.description}" %></p>
    <% end %>

    <div class="card" style="width: 28rem;">
        <div class="card-body">
        <h5>Upcomming</h5>
        <% @upcoming_events.each do |event| %>
        <p class="mb-0  mt-4"> Event Name: <%= "#{event.name}" %> Description: <%= "#{event.description}" %></p>
        <p  class="mb-0"> Date: <%= "#{event.date}" %> Place: <%= "#{event.place}" %></p>
        <% end %>
        </div>
    </div>

    <div class="card" style="width: 28rem;">
        <div class="card-body">
        <h5>Past Events</h5>
        <% @prev_events.each do |event| %>
        <p class="mb-0  mt-4"> Event Name: <%= "#{event.name}" %> Description: <%= "#{event.description}" %></p>
        <p  class="mb-0"> Date: <%= "#{event.date}" %> Place: <%= "#{event.place}" %></p>
        <% end %>
        </div>
    </div>

<% end %>
