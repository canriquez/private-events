<% if @user %>
    <div class="text-center">
        <h1><%= "Welcome #{@user.name}" %></h1>
        <h5>Upcomming Events</h5>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        <% @upcoming_events.each do |event| %>
            <div class="card m-4" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= link_to "#{event.name}", event_path(event)  %></h5>
                <p class="card-text"><%= "#{event.description}" %></p>
                <p  class="mb-0"> Date: <%= "#{event.date}" %> Place: <%= "#{event.place}" %></p>
                <small>by: <%= "#{event.creator.name}" %> </small>
            </div>
            </div>
        <% end %>
        <div class="card m-4" style="width: 18rem;">
            <div class="card-body d-flex justify-content-center align-items-center">
                <%= link_to "Create New Event", new_event_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>

    <div class="text-center">
        <h5>Past Events</h5>
    </div>

    <div class="d-flex justify-content-center flex-wrap">
        <% @prev_events.each do |event| %>
            <div class="card m-4" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= link_to "#{event.name}", event_path(event)  %></h5>
                <p class="card-text"><%= "#{event.description}" %></p>
                <p  class="mb-0"> Date: <%= "#{event.date}" %> Place: <%= "#{event.place}" %></p>
                <small>by: <%= "#{event.creator.name}" %> </small>
            </div>
            </div>
        <% end %>
    </div>
<% end %>



